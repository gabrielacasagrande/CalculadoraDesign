<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pink"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:inputType="textPersonName"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/op_1"
                style="@style/botoesP"
                android:text="+" />

            <Button
                android:id="@+id/n_7"
                style="@style/botoesP"
                android:text="7"/>

            <Button
                android:id="@+id/n_4"
                style="@style/botoesP"
                android:text="4" />

            <Button
                android:id="@+id/n_1"
                style="@style/botoesP"
                android:text="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/op_2"
                style="@style/botoesP"
                android:text="*"/>

            <Button
                android:id="@+id/n_8"
                style="@style/botoesP"
                android:text="8"/>

            <Button
                android:id="@+id/n_5"
                style="@style/botoesP"
                android:text="5" />

            <Button
                android:id="@+id/n_2"
                style="@style/botoesP"
                android:text="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/op_3"
                style="@style/botoesP"
                android:text="-"/>

            <Button
                android:id="@+id/n_9"
                style="@style/botoesP"
                android:text="9" />

            <Button
                android:id="@+id/n_6"
                style="@style/botoesP"
                android:text="6" />

            <Button
                android:id="@+id/n_3"
                style="@style/botoesP"
                android:text="3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4">

            <Button
                android:id="@+id/op_4"
                style="@style/botoesP"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="/"/>

            <Button
                android:id="@+id/p"
                style="@style/botoesP"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="."/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/op_5"
                    style="@style/botoesP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="=" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>






</LinearLayout>

